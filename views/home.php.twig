<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>OOP MVC</title>
    <link rel="stylesheet" href="web/home/stylehome.css">
    <link rel="stylesheet" href="web/header/styleheader.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="web/articleView.js"></script>
</head>
<body>
{% block content %}
    <div class="home-view">

        {% for i in articles %}
            <div class="article">
                <a class="lienvisible" href='?action=articleview&article={{ i['title'] }}'>
                    {{ i['title'] }}</a>
                <img src="{{ i['image'] }}">
            </div>
        {% endfor %}
    </div>
    <div class="content"></div>
{% endblock %}

</body>
</html>